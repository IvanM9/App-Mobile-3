<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#54AEF6"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnObtener"
        android:layout_width="369dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7F3DF6"
        android:onClick="requestAPI"
        android:text="Obtener headers de la petición"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHeader" />

    <TextView
        android:id="@+id/txvDatos"
        android:layout_width="338dp"
        android:layout_height="430dp"
        android:text="Aquí se mostrarán los datos del header de la petición, incluyendo al header que se obtendrá por el &quot;plain text&quot;"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnObtener" />

    <EditText
        android:id="@+id/txtHeader"
        android:layout_width="224dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ingrese algún texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="122dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="Header-ingresado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>